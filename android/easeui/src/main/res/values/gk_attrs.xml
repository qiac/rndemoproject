<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EaseRoundedImageView">
        <attr name="ease_riv_corner_radius" format="dimension" />
        <attr name="ease_riv_corner_radius_top_left" format="dimension" />
        <attr name="ease_riv_corner_radius_top_right" format="dimension" />
        <attr name="ease_riv_corner_radius_bottom_left" format="dimension" />
        <attr name="ease_riv_corner_radius_bottom_right" format="dimension" />
        <attr name="ease_riv_border_width" format="dimension" />
        <attr name="ease_riv_border_color" format="color" />
        <attr name="ease_riv_mutate_background" format="boolean" />
        <attr name="ease_riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="ease_riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="ease_riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="ease_riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>
    
</resources>
